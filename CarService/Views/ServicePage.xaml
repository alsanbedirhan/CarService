<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CarService.ViewModels"
             x:Class="CarService.Views.ServicePage"
             Title="Araç Al">
    <ContentPage.BindingContext>
        <vm:ServiceViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <Button Text="Araç Seç" Margin="50,5,50,0"/>
                <Button Text="Araç Kaydet" Margin="50,5,50,0"/>
            </HorizontalStackLayout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.8*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Text="Araç Sahibi:" FontSize="20" FontAttributes="Bold"/>
                <Label Grid.Row="0" Grid.Column="1" Text="{Binding Musteri.AdSoyad}"/>

            </Grid>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>