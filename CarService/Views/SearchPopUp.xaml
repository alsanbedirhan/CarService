<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="CarService.Views.SearchPopUp">
    <StackLayout Padding="20" Spacing="10" Orientation="Vertical">
        <Label Text="Seçiniz" FontSize="20"/>
        <CollectionView x:Name="ItemsCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeThickness="5">
                        <Label Text="{Binding DisplayValue}" FontSize="18"/>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <StackLayout Orientation="Horizontal" Padding="10,0,0,0">
            <Button Text="Seçimleri Temizle" Clicked="Clear_Clicked" HorizontalOptions="StartAndExpand"/>
            <Button Text="Tamam" Clicked="Ok_Clicked" HorizontalOptions="EndAndExpand"/>
        </StackLayout>
    </StackLayout>
</toolkit:Popup>
