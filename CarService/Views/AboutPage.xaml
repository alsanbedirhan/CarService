<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarService.Views.AboutPage"
             Title="Ana Sayfa">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout VerticalOptions="CenterAndExpand"  HorizontalOptions="CenterAndExpand">
                <Label FontSize="60" TextColor="Red" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" Text="Kriyus"/>
                <Label FontSize="25" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" Text="Araba Servis Sistemi"/>
                <Label x:Name="txtVersion" FontSize="Large" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center"/>
            </StackLayout>
            <ActivityIndicator 
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"
            IsVisible="False"
            IsRunning="True"
            Color="Red"
            Scale="2"
            x:Name="LoadingIndicator"/>
            <StackLayout VerticalOptions="End" HorizontalOptions="FillAndExpand" Padding="5">
                <Button x:Name="txtdb" Text="Yenile" BackgroundColor="{StaticResource Primary}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>